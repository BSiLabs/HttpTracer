<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HttpTracer.TestApp.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="Welcome to Xamarin Forms and Prism!" />

        <Button x:Name="VerbosityButton" Text="Change HttpTracer Verbosity"
                Clicked="VerbosityButton_OnClicked"/>
        
        <Button Text="Dump trace to Console!"
                Command="{Binding ButtonClickCommand}" />

        <Button Text="Dump trace to File!"
                Command="{Binding TraceFileCommand}" />
    </StackLayout>

</ContentPage>
